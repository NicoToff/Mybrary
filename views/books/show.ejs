<h2><%= book.title %></h2>
<img width="100" height="150" src="<%= book.coverImagePath %>" alt="">
<div>
    Author: <%= book.author.name %>
</div>
<div>
    Publish Date: <%= book.publishDate.toDateString() %>
</div>
<div>
    Pages: <%= book.pageCount %>
</div>
<div>
    Description: <%= book.description %>
</div>

<div>
    <a href="/books/<%= book.id %>/edit" class="btn btn-primary">Edit</a>
    <%- include("../partials/deleteForm", { url: `/books/${book.id}` }) %>
</div>
<div class="mt-1">
    <a href="/authors/<%= book.author.id %>" class="btn btn-primary">View Author</a>
</div>